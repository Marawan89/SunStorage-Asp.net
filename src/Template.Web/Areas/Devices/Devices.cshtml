@page
@model Template.Web.Areas.Devices.DevicesViewModel

@{
    ViewData["Title"] = "Device Management";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Device Management</h2>

            <a href="/devices/create" class="btn btn-dark mb-2">Add a Device</a>

            <div class="filtering">
                <div class="d-flex mb-3">
                    <form method="get">
                        <input 
                            class="form-control me-2" 
                            type="search" 
                            placeholder="Search for a Serial Number" 
                            name="searchTerm"
                            value="@Model.SearchTerm"
                            oninput="this.form.submit()" />
                    </form>
                </div>

                <form method="get">
                    <div class="row my-2">
                        <div class="col-12">Filters:</div>
                        <div class="col-4">
                            <select name="DeviceTypeFilter" class="form-control" onchange="this.form.submit()">
                                <option value="">Seleziona Tipo di Dispositivo</option>
                                @if (Model.DeviceTypes != null)
                                {
                                    foreach (var deviceType in Model.DeviceTypes)
                                    {
                                                <option value="@deviceType" selected="@(deviceType == Model.DeviceTypeFilter)">@deviceType</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-4">
                            <select name="DeviceStatusFilter" class="form-control" onchange="this.form.submit()">
                                <option value="">Device Status...</option>
                                @foreach (var status in Model.AllDevices.Select(d => d.Status).Distinct())
                                {
                                        <option value="@status" selected="@(status == Model.DeviceStatusFilter)">@status</option>
                                }
                            </select>
                        </div>

                        <div class="col-4">
                            <select name="DeviceWarrantyFilter" class="form-control" onchange="this.form.submit()">
                                <option value="">Warranty Status...</option>
                                <option value="Valid" selected="@(Model.DeviceWarrantyFilter == "Valid")">Valid</option>
                                <option value="Expired" selected="@(Model.DeviceWarrantyFilter == "Expired")">Expired</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Serial Number</th>
                            <th>Device Type</th>
                            <th>Warranty</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.CurrentDevices.Any())
                        {
                            foreach (var device in Model.CurrentDevices)
                            {
                                        <tr>
                                            <td>@device.SerialNumber</td>
                                            <td>@device.DeviceTypeName</td>
                                            <td>@device.WarrantyStatus</td>
                                            <td>@device.Status</td>
                                            <td>
                                                <a href="/devices/@device.Id/show" class="btn btn-outline-warning">View</a>
                                                <a href="/devices/@device.Id/edit" class="btn btn-outline-info">Edit</a>
                                            </td>
                                        </tr>
                            }
                        }
                        else
                        {
                                <tr>
                                    <td colspan="5">No devices found</td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>

            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)">Previous</a>
                    </li>

                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                    }

                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
