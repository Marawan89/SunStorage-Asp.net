@model Template.Web.Areas.Admin.Users.IndexViewModel@using Template.Web@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers@{    ViewData["Title"] = "Devices";}<link rel="stylesheet" href="~/css/site.css"><div class="container-fluid">    <!-- Cambiato da container a container-fluid per massima larghezza -->    <div class="row justify-content-center">        <div class="col-12 col-md-10 col-lg-8">            <!-- Centra la tabella e impostala a larghezza -->            <div class="mt-4 bg-content p-md-5">                <a href="/Admin/Devices/Create" class="btn btn-dark mb-2">Add a Device</a>                <div class="filtering">                    <div class="d-flex mb-3">                        <input class="form-control me-2" type="search" placeholder="Search for a Serial Number" value="@Model.SearchTerm" />                    </div>                </div>                <!-- Filtri per il dispositivo -->                <div class="row my-2">                    <div class="col-12">Filters:</div>                    <div class="col-4">                        <select class="form-control" asp-for="DeviceTypeFilter">                            <option value="">Device Type...</option>                            @foreach (var option in Model.DeviceTypeOptions)

                            {                                <option value="@option">@option</option>                            }                        </select>                    </div>                    <div class="col-4">                        <select class="form-control" asp-for="DeviceStatusFilter">                            <option value="">Device Status...</option>                            @foreach (var option in Model.DeviceStatusOptions)

                            {                                <option value="@option">@option</option>                            }                        </select>                    </div>                    <div class="col-4 d-flex align-items-center">                        <select class="form-control" asp-for="DeviceWarrantyFilter">                            <option value="">Warranty Status...</option>                            <option value="Valid">Valid</option>                            <option value="Expired">Expired</option>                            <option value="Not available">Not available</option>                        </select>                        <button class="btn btn-outline-danger ms-2" title="Reset Filters" onclick="resetFilters()">❌</button>                    </div>                </div>                <!-- Tabella dispositivi -->                <div class="table-responsive bg">                    <table class="table table-striped">                        <thead>                            <tr>                                <th scope="col">Serial Number</th>                                <th scope="col">Device Type</th>                                <th scope="col">Warranty</th>                                <th scope="col">Status</th>                                <th scope="col">Actions</th>                            </tr>                        </thead>                        <tbody class="table-group-divider">                            @if (Model.Devices.Any())

                            {                                @foreach (var device in Model.Devices)

                                {                                    <tr>                                        <td>@device.SerialNumber</td>                                        <td>@device.DeviceTypeName</td>                                        <td>                                            @if (device.DeviceWarranty != null)

                                            {                                                @if (device.DeviceWarranty.EndDate >= DateTime.Now)

                                                {                                                    @:Valid                                                }

                                                else

                                                {                                                    @:Expired                                                }                                            }

                                            else

                                            {                                                @:Not available                                            }                                        </td>                                        <td>@device.Status</td>                                        <td>                                            <a href="@Url.Action("Show", "Devices", new { id = device.Id })" class="btn btn-outline-warning">View</a>                                            <div class="btn-group drop">                                                <button type="button" class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown">                                                    Actions                                                </button>                                                <div class="dropdown-menu dropdown-menu-end">                                                    <a href="@Url.Action("Edit", "Devices", new { id = device.Id })" class="dropdown-item">Edit Device</a>                                                    <a href="#" class="dropdown-item" onclick="changeDeviceStatus(@device.Id)">Change Status</a>                                                    <a href="#" class="dropdown-item" onclick="deleteDevice(@device.Id)">Delete Device</a>                                                </div>                                            </div>                                        </td>                                    </tr>                                }                            }

                            else

                            {                                <tr>                                    <td colspan="5">No record found</td>                                </tr>                            }                        </tbody>                    </table>                </div>                <!-- Paginazione -->                <nav>                    <ul class="pagination justify-content-center">                        @for (int i = 1; i <= Model.TotalPages; i++)

                        {                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">                                <a class="page-link" href="#" onclick="changePage(@i)">@i</a>                            </li>                        }                    </ul>                </nav>            </div>        </div>    </div></div><script>    function changeDeviceStatus(deviceId) {        // Handle status change    }    function deleteDevice(deviceId) {        if (confirm("Are you sure you want to delete this device?")) {            // Call backend to delete device        }    }    function resetFilters() {        // Reset all filters    }    function changePage(pageNumber) {        // Change page logic    }</script>